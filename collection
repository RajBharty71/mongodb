
//create Collection
  db.createCollection("school")


//create collection with validation and dataType
db.createCollection("user",{
validator:{
$jsonSchema:{
title : "user object validation",
required: ["name","age","course"],
properties:{
  name:{
   bsonType : "string",
   description : "Name is only alphabet"
  },
  age:{
   bsonType : "int",
   description : "Age is only Integer Type",
   minimum : 8,
   maximum : 25
  },
   course:{
   bsonType : "string",
   description : "course is only string Type",
   enum : ["B.tech","B.com","M.tech"]
  },
}
}
}});
 
 //Insert one data  in collection
   db.user.insertOne({
   "name": "Raj Bharty",
   "age" : 19,
    "course" : "B.com"
});

//Update collection
db.student.updateOne(
 {_id:ObjectId('69318741b0ad9d2224ce5f47')},
  {
   $set:
   {
    name:"RajBharty",
    age :20,
 }
});
/** opertator use in update */
$set :- "Use to set the value according condition";
$unset :- "use to remove field";
$rename :-"use to rename field"; //key 
$inc :- "use to increment value of field"; //integer
mul :- "use to multiple value of field"; //integer
$currentData :- "set the field value to the current data";

//update array operator 

